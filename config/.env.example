# Discord Bot (optional - set to enable Discord)
DISCORD_TOKEN=your_discord_bot_token
DISCORD_SIGNAL_CHANNEL_ID=your_discord_channel_id

# Telegram Bot (optional - set to enable Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=your_telegram_channel_id

# Exchange
# For Japan: bitbank (recommended, 44 JPY pairs, fetchOHLCV supported)
# Other JP options: bittrade, binance (with Binance Japan account)
EXCHANGE=bitbank
TRADE_SYMBOL=BTC/JPY
# Multi-pair: comma-separated (overrides TRADE_SYMBOL for monitoring)
# Japan (JPY pairs):
TRADE_SYMBOLS=BTC/JPY,ETH/JPY,XRP/JPY,SOL/JPY,DOGE/JPY
# Global (USDT pairs - not available in Japan):
# TRADE_SYMBOLS=BTC/USDT,ETH/USDT,SOL/USDT,DOGE/USDT
API_KEY=your_api_key
API_SECRET=your_api_secret
SANDBOX=true

# Trade
PROCESSING_AMOUNT=0.001
# Per-coin trade amounts (overrides PROCESSING_AMOUNT for specific coins)
# PROCESSING_AMOUNT_BTC=0.001
# PROCESSING_AMOUNT_ETH=0.05
# PROCESSING_AMOUNT_XRP=100
# PROCESSING_AMOUNT_SOL=1
# PROCESSING_AMOUNT_DOGE=1000
RISK_PCT=0.01

# Auto-trade (execute trades automatically on strong signals)
AUTO_TRADE=false
AUTO_TRADE_MIN_STRENGTH=4
# Limit auto-trade to specific coins (empty = all monitored symbols)
# AUTO_TRADE_SYMBOLS=ETH,XRP,SOL

# Admin (comma-separated user IDs, empty = all users can trade)
ADMIN_DISCORD_IDS=
ADMIN_TELEGRAM_IDS=

# Signal
SIGNAL_INTERVAL=60000
SIGNAL_COOLDOWN=300000

# Server
PORT=3000

# Subscription (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_xxx
SUBSCRIPTION_PRICE=5
BASE_URL=http://localhost:3000
